#!/bin/sh

BUILD_DIR=$1

cat <<-YAML
---
addons:
  - mongohq:free
config_vars:
  PATH: .meteor/local/usr/bin:.meteor/local/usr/lib/meteor/bin/node:bin:/usr/local/bin:/usr/bin:/bin
default_process_types:
  meteor: NODE_PATH=.meteor/local/usr/lib/meteor/lib/node_modules MONGO_URL=\$MONGOHQ_URL node .meteor/local/build/main.js --keepalive
YAML
